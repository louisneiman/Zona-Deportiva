<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffffff"
    tools:context=".ui.FavoritosFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/favoritor_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:tint="@color/greenwhite"
                android:src="@drawable/love" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="Whoops!"
                android:textColor="@color/themecolor"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/greenwhite"
                android:text="Tu lista de favoritos esta vacia porques \n no agregas ningun canal en el menu de favoritos"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>